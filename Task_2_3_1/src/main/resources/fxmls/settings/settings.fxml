<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Scene xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.nsu.fit.oop.melnikov.game.snake.presenter.presenters.settings.SettingsPresenter">
   <VBox alignment="CENTER">
      <VBox fx:id="settingsSet" alignment="CENTER" style="-fx-background-color: white;">
         <HBox alignment="CENTER">
            <Label text="Game speed" />
            <Slider fx:id="gameSpeed" blockIncrement="100.0" majorTickUnit="100.0" max="420.0" min="20.0" minWidth="-Infinity" minorTickCount="100" prefWidth="150.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="100.0">
               <HBox.margin>
                  <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
               </HBox.margin>
            </Slider>
            <VBox.margin>
               <Insets left="50.0" right="50.0" />
            </VBox.margin>
         </HBox>
         <Button mnemonicParsing="false" onAction="#onChangeKeysClick" prefWidth="150.0" text="Change key codes">
            <VBox.margin>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </VBox.margin>
         </Button>
         <Button layoutX="130.0" layoutY="147.0" mnemonicParsing="false" onAction="#onMainMenuClick" prefWidth="150.0" text="Main menu">
            <VBox.margin>
               <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </VBox.margin></Button>
         <Button defaultButton="true" layoutX="149.0" layoutY="131.0" mnemonicParsing="false" onAction="#onContinueClick" prefWidth="150.0" text="Continue">
            <VBox.margin>
               <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </VBox.margin>
         </Button>
         <Button layoutX="130.0" layoutY="147.0" mnemonicParsing="false" onAction="#onExitClick" prefWidth="150.0" text="Exit">
            <VBox.margin>
               <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </VBox.margin></Button>
         <VBox.margin>
            <Insets bottom="30.0" top="30.0" />
         </VBox.margin>
      </VBox>
   </VBox>
</Scene>
